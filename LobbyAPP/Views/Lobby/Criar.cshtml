@model LobbyModel
@{
    ViewData["Title"] = "Criar lobby";
}

<div class= "text-center">


    <h1 class="display-4">Criar Lobby</h1>

</div>

<form asp-controller="Lobby" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="quadra">Quadra</label>
        <input type="text" asp-for="Quadra" class="form-control" placeholder="Digite o nome da quadra">
    </div>

    <div class="form-group">
        <label for="endereco">Endereço</label>
        <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite o endereço">
    </div>

    <div class="form-group">
        <label for="modalidades">Modalidades</label>
        <input type="text" asp-for="Modalidades" class="form-control" placeholder="Digite as modalidades disponíveis">
    </div>

    <br />
  
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <br />
    <br />
    <a class="btn btn-secondary btn-block" asp-controller="Lobby" asp-action="Index" role="button">Voltar</a>

</form>


