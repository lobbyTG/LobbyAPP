@model List<LobbyModel>
@{
    ViewData["Title"] = "Lobby's";
}

<div class= "text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">

        <a class="btn btn-primary" role="button" asp-controller="Lobby" asp-action="Criar">Adicionar novo Lobby</a>

    </div>
    <br />

    <h1 class="display-4">Onde irá ser a gameplay de hoje?</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Quadra</th>
                <th scope="col">Endereco</th>
                <th scope="col">Modalidades</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(LobbyModel lobby in Model)
                {
                    <tr>
                        <th scope="row">@lobby.Id</th>
                        <td>@lobby.Quadra</td>
                        <td>@lobby.Endereco</td>
                        <td>@lobby.Modalidades</td>
                        <td>

                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id ="@lobby.Id" asp-controller="Lobby" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@lobby.Id" asp-controller="Lobby" asp-action="Apagar">Apagar</a>
                            </div>

                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>


</div>

